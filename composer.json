{
	"name": "x3p0-dev/x3p0-framework",
	"version": "1.0.0",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"build": [
			"composer update --no-dev",
			"composer dump-autoload -a --no-dev"
		],
		"dev": [
			"composer update",
			"composer dump-autoload"
		],
		"lint:php": "./vendor/bin/phpcs -d error_reporting=E_ALL^E_DEPRECATED -s --colors .",
		"fix:php": "./vendor/bin/phpcbf -d error_reporting=E_ALL^E_DEPRECATED -s --colors ."
	},
	"autoload": {
		"psr-4": {
			"X3P0\\Framework\\": "src/"
		}
	},
	"require": {
                "php": ">=8.1"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "*",
		"symfony/var-dumper": "^7.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"authors": [
		{
			"name": "Justin Tadlock",
			"email": "justintadlock@gmail.com"
		}
	]
}
